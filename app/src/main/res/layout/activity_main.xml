                        android:layout_height="66dp"
                        android:background="#ff0000"
                        android:layout_marginLeft="100dp"
                        android:layout_marginStart="100dp"/>

                <com.allever.videoeditordemo.MyView android:layout_width="100dp" android:layout_height="60dp"
                android:background="#aa5514"/>
                <com.allever.videoeditordemo.MyView android:layout_width="100dp" android:layout_height="60dp"
                      android:background="#aadd36"/>
                <com.allever.videoeditordemo.MyView android:layout_width="100dp" android:layout_height="60dp"
                      android:background="#aa55aa"/>
                <com.allever.videoeditordemo.MyView android:layout_width="100dp" android:layout_height="60dp"
                      android:background="#aa5514"/>
            </com.allever.videoeditordemo.MyLinearLayout>
        </com.allever.videoeditordemo.MyRelativeLayout>



